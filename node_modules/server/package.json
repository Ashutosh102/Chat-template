    "serve-index": "^1.8.0",
    "socket.io": "^2.0.3"
  },
  "devDependencies": {
    "eslint": "^4.7.2",
    "eslint-plugin-jasmine": "^2.2.0",
    "grunt": "^1.0.1",
    "grunt-bytesize": "^0.2.0",
    "grunt-contrib-connect": "^1.0.2",
    "grunt-contrib-jshint": "^1.1.0",
    "grunt-contrib-pug": "^1.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-sass": "^3.1.0",
    "jest": "^25.0.0",
    "jstransformer-marked": "^1.0.2",
    "node-sass": "^4.13.1",
    "picnic": "^6.4.0",
    "request-promises": "^1.0.1",
    "supertest": "^3.0.0"
